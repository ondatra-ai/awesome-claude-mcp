{
  "name": "awesome-claude-mcp-tests",
  "version": "1.0.0",
  "description": "E2E and integration tests for MCP Google Docs Editor",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:report": "playwright show-report",
    "test:docker": "npm run test:docker:simple --",
    "test:docker:simple": "docker-compose -f ../docker-compose.test.yml run --rm playwright-test",
    "install:browsers": "npx playwright install"
  },
  "devDependencies": {
    "@modelcontextprotocol/sdk": "^1.24.0",
    "@playwright/test": "^1.56.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "keywords": [
    "e2e-testing",
    "playwright",
    "mcp",
    "google-docs"
  ]
}
